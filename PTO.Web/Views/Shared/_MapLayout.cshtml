@{
    var area = ViewContext.RouteData.DataTokens[AppStrings.Area] != null
        ? ViewContext.RouteData.DataTokens[AppStrings.Area].ToString().ToLower()
        : null;
    var controller = ViewContext.RouteData.Values[AppStrings.Controller].ToString().ToLower();
    var action = ViewContext.RouteData.Values[AppStrings.Action].ToString().ToLower();
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        @RenderSection("meta", required: false)
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
        @Html.Partial("_html5shiv")
        <!-- Fav and touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="~/Content/ico/apple-touch-icon-57-precomposed.png">
        <link href="~/Content/ico/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    </head>
    <body id="@controller-@action" class="@controller @action">
        @Html.Partial("_NavBar")

        @RenderSection("featured", required: false)

        <div class="container">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
